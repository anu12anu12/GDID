<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/listitemMainLayoutID" android:minHeight="@dimen/defect_sheet_header_height">

    <TextView
        android:layout_margin="@dimen/bug_item_margin"
        android:id="@+id/orderNumberId"
        android:layout_width="wrap_content"
        android:textColor="@color/ordernumbertextColor"
        android:layout_height="wrap_content"
        android:layout_weight="0.50" android:layout_gravity="center_horizontal|center_vertical"/>
    <TextView
        android:layout_margin="@dimen/bug_item_margin"
        android:id="@+id/orderStatusId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.30" android:layout_gravity="center_vertical"/>

</LinearLayout>